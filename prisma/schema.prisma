// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id String @id @default(uuid())

  type       String
  comment    String
  screenshot String?
  createdAt  DateTime

  clientId String
  User     User?  @relation(fields: [clientId], references: [id])

  @@map("feedbacks")
}

model User {
  id        String @id @default(uuid())
  github_id Int    @unique

  username   String
  name       String
  email      String?
  avatar_url String?

  Feedback Feedback[]

  @@map("users")
}
